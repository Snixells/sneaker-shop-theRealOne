                                            <!-- weißer Schuh -->
                                            <img class="weißer_schuh" id="weißer_schuh" src="/img/originalschuh.png">

                                            <!-- Farben/Aufdrucke/Muster -->

                                            <!-- Schnürsenkel -->
                                            <img class="grauSchnuer" id="grauSchnuer" src="/img/grauSchnuer.png" style="display: none;">
                                            <img class="rosaSchnuer" id="rosaSchnuer" src="/img/rosaSchnuer.png" style="display: none;">
                                            <img class="hellblauSchnuer" id="hellblauSchnuer" src="/img/blauSchnuer.png"
                                                style="display: none;">

                                            <!-- Nähte -->
                                            <img class="gruenNaht" id="gruenNaht" src="/img/gruenNaht.png" style="display: none;">
                                            <img class="rotNaht" id="rotNaht" src="/img/rotNaht.png" style="display: none;">
                                            <img class="blauNaht" id="blauNaht" src="/img/blauNaht.png" style="display: none;">

                                            <!-- Aufdrucke -->
                                            <img class="flammen" id="flammen" src="/img/flammen.png" style="display: none;">
                                            <img class="planet" id="planet" src="/img/planet.png" style="display: none;">
                                            <img class="musik" id="musik" src="/img/musik.png" style="display: none;">

                                            <!-- Muster -->
                                            <img class="diamonds" id="diamonds" src="/img/diamonds.png" style="display: none;">
                                            <img class="zigzag" id="zigzag" src="/img/zigzag.png" style="display: none;">

                                        </div>
                                        <br><br>
                                        {{!-- <button type="submit" class="btn btn-success btn-lg" id="btnSendConfiguration">Jetzt
                                            für 45€ kaufen!</button> --}}

                                        <button onclick="Zurücksetzen(); Konfiguration()" class="btn btn-secondary">Konfiguration
                                            zurücksetzen</button>
                                    </div>

                                    <div class="col-md-2 order-md-2">
                                        <form action="/submit-configurator" method="post">

                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Email address</label>
                                                <input type="email" class="form-control" name="exampleInputEmail1" id="exampleInputEmail1"
                                                    aria-describedby="emailHelp" placeholder="Enter email">
